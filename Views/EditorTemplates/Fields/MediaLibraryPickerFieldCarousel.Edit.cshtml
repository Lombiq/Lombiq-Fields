@model Lombiq.Fields.ViewModels.MediaLibraryPickerFieldCarouselViewModel

@using Lombiq.Fields.ViewModels;
@using Lombiq.Fields.Settings;

@{
    //var settings = Model.Field.PartFieldDefinition.Settings.GetModel<MediaLibraryPickerFieldCarouselSettings>();

}
<fieldset>
    <ol>
        <li>
            @Html.CheckBoxFor(m => Model.Settings.IsCarousel)
            @Html.LabelFor(m => Model.Settings.IsCarousel, @T("Display media items in carousel").Text, new { @class = "forcheckbox" })
            @Html.Hint(T("Check to display media items in carousel."))
        </li>
    </ol>
</fieldset>

<fieldset>
        <legend>@T("Carousel-specific settings")</legend>
        <ol>
            <li>
                @Html.CheckBoxFor(m => Model.Settings.IsSingleItem)
                @Html.LabelFor(m => Model.Settings.IsSingleItem, @T("Show only one item at a time.").Text, new { @class = "forcheckbox" })
                @Html.Hint(T("Leave unchecked to show multiple items."))
            </li>
            <li>
                @Html.CheckBoxFor(m => Model.Settings.IsInfinite)
                @Html.LabelFor(m => Model.Settings.IsInfinite, @T("Infinite srcolling").Text, new { @class = "forcheckbox" })
                @Html.Hint(T("Check for infinite scrolling."))
            </li>
            <li>
                @Html.LabelFor(m => Model.Settings.ItemsToShow, @T("Number of slides to show at a time."))
                @Html.TextBoxFor(m => Model.Settings.ItemsToShow)
                @Html.Hint(T("The number how many slides appear at a time."))
            </li>
            <li>
                @Html.LabelFor(m => Model.Settings.ItemsToScroll, @T("Number of slides to scroll at a time."))
                @Html.TextBoxFor(m => Model.Settings.ItemsToScroll)
                @Html.Hint(T("The number how many slides scroll at a time."))
            </li>
            <li>
                @Html.CheckBoxFor(m => Model.Settings.IsAutoplay)
                @Html.LabelFor(m => Model.Settings.IsAutoplay, @T("Autoplay.").Text, new { @class = "forcheckbox" })
                @Html.Hint(T("Enables auto play of slides."))
            </li>
            <li>
                @Html.LabelFor(m => Model.Settings.AutoplaySpeed, @T("Autoplay speed."))
                @Html.TextBoxFor(m => Model.Settings.AutoplaySpeed)
                @Html.Hint(T("Auto play change interval. Default: 3000."))
            </li>
        </ol>
    </fieldset>